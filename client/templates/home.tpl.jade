div.jumbotron
  div.container
    br
    input.form-control#personName(type="text" placeholder="What's your name?")
    br
    if isName
      button.btn.btn-primary.btn-block#add-user(type="button" 
      style="margin-bottom: -29px; margin-top: -5px;")
        | Not here? Create entry for "#{personName}"

div.container
  table.table.table-hover
    thead(style="font-weight: bold;")
      tr
        td Name
        td Status
        td History
        td Actions
        if admin
          td Delete
    tbody
      each users
        +status
